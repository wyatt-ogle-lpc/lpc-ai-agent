#app/views/login/new.html.erb
<%= form_with url: login_path, method: :post do |f| %>
    <div>
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div>
      <%= submit_tag "Log in" %>
    </div>
  <% end %>
  <% if flash[:error] %>
    <div class="error"><%= flash[:error] %></div>
  <% end %>
  